<section class="mx-auto">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="w-[100%]">
      <%= f.text_field :login, placeholder: 'Username', class: 'w-[100%]' %>
    </div>
    <br />
    <div>
      <%= f.password_field :password, placeholder: 'Password', class: 'w-[100%]' %>
    </div>
    <br />
  
    <div class="inline-block px-6 py-2.5 bg-sky-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-sky-700 hover:shadow-lg focus:bg-sky-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-sky-500 active:shadow-lg transition duration-150 ease-in-out">
      <%= f.submit "Log in" %>
    </div>
    <br />
    <br />
  <% end %>
  <%= render "devise/shared/links" %>
</section>

