  <p><%= post.text %></p>
  <aside class="text-right mr-2">
    <span>Comments: <%= post.comments_counter %></span>
    <span>
      Likes: 
      <%= post.likes_counter %>
    </span>
    <%= render "likes/like", post: post %>
  <aside>
</div>
