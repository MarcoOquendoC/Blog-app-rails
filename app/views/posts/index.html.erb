<header class="bg-white space-y-4 p-4 sm:px-8 sm:py-6 lg:p-4 xl:px-8 xl:py-6">
  <%= render 'static/header' %>
</header>

<main class="container mt-2 mx-auto px-5 flex flex-col">
  <%= render "users/user", user: @user %>
  
  <div class="flex gap-2">
    <%= link_to new_user_post_path(@user) do %>
      <button type="button" class="inline-block px-6 py-2.5 bg-sky-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-sky-700 hover:shadow-lg focus:bg-sky-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-sky-500 active:shadow-lg transition duration-150 ease-in-out">
        New Post
      </button>
    <% end %>
  
    <%= link_to user_path(@user), class: 'self-center' do %>
      <button type="button" class="inline-block px-6 py-2.5 bg-sky-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-sky-700 hover:shadow-lg focus:bg-sky-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-sky-500 active:shadow-lg transition duration-150 ease-in-out">
        Back to User
      </button>
    <% end %>
  </div>
  
  <% @posts.each do | post | %>
  
    <%= link_to user_post_path(@user, post), class:"border-2 border-sky-50 mb-1 mt-2" do %>
      <%= render "post", post: post %>
      <% post.comments_list.each do |comment| %>
        <p class="pl-2">
          <span><strong><%= comment.author.name %>:</strong></span>
          <span><%= comment.text %></span>
        </p>
      <% end %>
    <% end %>
  
  <% end %>
</main>
